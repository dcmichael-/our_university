<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:background="#b0d3d4"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/a"
        android:text="asdfasfdasdfasdf" />

    <TextView
        android:id="@+id/writer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/title"
        android:background="@drawable/a"
        android:text="writer" />

    <TextView
        android:id="@+id/mail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/writer"
        android:background="@drawable/a"
        android:text="mail" />

    <TextView
        android:id="@+id/date"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mail"
        android:background="@drawable/a"
        android:text="date" />

    <WebView
        android:id="@+id/content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/horizontalScrollView1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/date"
        android:background="@drawable/cont" />
    
    <HorizontalScrollView
        android:id="@+id/horizontalScrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_weight="2" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/anon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_01"
                android:text="@string/blank" />

            <Button
                android:id="@+id/hacsa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_02_b"
                android:text="@string/blank" />

            <Button
                android:id="@+id/hacwon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_03_b"
                android:text="@string/blank" />

            <Button
                android:id="@+id/sug"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_04_b"
                android:text="@string/blank" />

            <Button
                android:id="@+id/QA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_05_b"
                android:text="@string/blank" />

            <Button
                android:id="@+id/hacsaQA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_06_b"
                android:text="@string/blank" />
        </LinearLayout>
    </HorizontalScrollView>

    
</RelativeLayout>